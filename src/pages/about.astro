---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Church Image',
    }}
  >
    <Fragment slot="title">
      Welcome to <br />
      <span class="text-accent dark:text-white highlight"> Mucheke Church of Christ</span>
    </Fragment>
    <Fragment slot="subtitle">
      Located in the heart of Masvingo, Zimbabwe, Mucheke Church of Christ is a vibrant community dedicated to living
      out the teachings of Jesus Christ. Our mission is to spread love, faith, and hope through service, worship, and
      fellowship.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Statistics about us"
    stats={[
      { title: 'Members', amount: '800' },
      { title: 'Weekly Services', amount: '5' },
      { title: 'Community Outreach Events', amount: '20' },
      { title: 'Years of Service', amount: '50+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="About Mucheke Church of Christ"
    subtitle="Our church is committed to spreading the teachings of Jesus Christ and serving our community with love and compassion."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Our Mission',
        description:
          'To foster a strong, faith-based community through worship, education, and service. We strive to live out Christ’s teachings by serving others and growing together in faith.',
        icon: 'tabler:cross',
      },
      {
        title: 'Our Services',
        description:
          'We offer Sunday worship services, Bible study sessions, prayer meetings, and various community outreach programs to help you grow in faith and connect with others.',
        icon: 'tabler:building',
      },
      {
        title: 'Community Outreach',
        description:
          'Our community programs are designed to help those in need. We organize food drives, clothing donations, and support local shelters to make a positive impact in our neighborhood.',
        icon: 'tabler:heart',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Worship Services',
        description:
          'Join us for uplifting worship services every Sunday, where we come together to praise, worship, and experience the presence of God.',
        icon: 'tabler:building',
      },
      {
        title: 'Bible Study',
        description:
          "Deepen your understanding of the Scriptures with our weekly Bible study sessions. All are welcome to join us as we explore God's word together.",
        icon: 'tabler:book',
      },
      {
        title: 'Youth Programs',
        description:
          'Our youth programs are designed to nurture and support the spiritual growth of our younger members. We offer engaging activities and discussions for all ages.',
        icon: 'tabler:users',
      },
      {
        title: 'Community Outreach',
        description:
          "We believe in serving our community. Participate in our outreach programs to make a positive impact and share God's love with those in need.",
        icon: 'tabler:heart',
      },
      {
        title: 'Prayer Meetings',
        description:
          'Join our regular prayer meetings to connect with others in prayer and seek God’s guidance and strength.',
        icon: 'tabler:users',
      },
      {
        title: 'Support Groups',
        description:
          'Our support groups offer a safe space for individuals to share their experiences and find comfort and strength through faith.',
        icon: 'tabler:users',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Community Image',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="At Mucheke Church of Christ, we are guided by core values that shape our community and our faith journey."
    items={[
      {
        title: 'Faith',
        description:
          'Our faith in Jesus Christ is the foundation of everything we do. We strive to live out His teachings and share His love with others.',
      },
      {
        title: 'Community',
        description:
          'We believe in the power of community. We support one another, celebrate together, and work collaboratively to make a positive impact.',
      },
      {
        title: 'Service',
        description:
          'Service to others is at the heart of our mission. We are committed to helping those in need through various outreach programs and initiatives.',
      },
      {
        title: 'Integrity',
        description:
          'Integrity is central to our identity. We are honest, transparent, and accountable in all our actions.',
      },
      {
        title: 'Compassion',
        description:
          'We show compassion to all, following the example of Christ. We care deeply about the well-being of every individual in our community.',
      },
      {
        title: 'Growth',
        description:
          'We are dedicated to spiritual and personal growth. We encourage continuous learning and development in our faith journey.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Achievements"
    subtitle="Over the years, Mucheke Church of Christ has made significant strides in fostering faith, supporting the community, and spreading the gospel. Here are some of our notable achievements."
    isReversed={true}
    callToAction={{
      text: 'See more',
      href: '/achievements',
    }}
    items={[
      {
        title: 'Community Impact',
        description:
          'We have organized numerous community outreach programs, providing food, clothing, and other essential services to those in need within our community.',
        icon: 'tabler:heart',
      },
      {
        title: 'Growing Membership',
        description:
          'Our congregation has grown steadily, with over 800 members actively participating in church activities and services.',
        icon: 'tabler:users',
      },
      {
        title: 'Educational Programs',
        description:
          'We offer a range of educational programs, including Bible study classes and youth programs, helping our members grow in their faith and understanding of the scriptures.',
        icon: 'tabler:book',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Locations"
    tagline="Find us"
    columns={4}
    items={[
      {
        title: 'Main Campus',
        description: '123 Church Street, Mucheke, Masvingo, Zimbabwe',
      },
      {
        title: 'Masvingo Outreach Center',
        description: '45 Faith Avenue, Masvingo, Zimbabwe',
      },
      {
        title: 'Mucheke Fellowship Hall',
        description: '678 Hope Road, Mucheke, Zimbabwe',
      },
      {
        title: 'Mucheke Community Center',
        description: '910 Peace Lane, Mucheke, Zimbabwe',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in Touch"
    tagline="We're Here to Assist You"
    columns={2}
    items={[
      {
        title: 'Chat with Us',
        description:
          'Need assistance or have questions? Connect with our team through live chat for immediate support and guidance.',
        icon: 'tabler:messages',
      },
      {
        title: 'Call Us',
        description:
          'Prefer to talk? Give us a call for any inquiries or support you need. Our team is ready to help you with any concerns.',
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
